generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum BlogStatus {
  DRAFT
  PUBLISHED
}

model Blog {
  id            String      @id @default(cuid())
  title         String
  slug          String?
  content       String      // current published content
  draftContent  String?     // editing version not public
  status        BlogStatus  @default(DRAFT)
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
}
